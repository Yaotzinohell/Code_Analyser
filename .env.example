# AI Code Analyzer Configuration

# AI Provider Selection: openai, anthropic, groq, or ollama
AI_PROVIDER=groq

# OpenAI Configuration (most reliable, requires API key)
# Get free credits at https://platform.openai.com/account/billing/credits
# OPENAI_API_KEY=your_openai_api_key
# OPENAI_MODEL=gpt-4o-mini

# Anthropic Configuration (Claude - alternative option)
# Get API key at https://console.anthropic.com/
# ANTHROPIC_API_KEY=your_anthropic_api_key
# ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Groq Configuration (fast, free tier available)
# Get API key at https://console.groq.com/
GROQ_API_KEY=your_groq_api_key
GROQ_MODEL=llama-3.3-70b-versatile

# Ollama Configuration (local, free, no API key needed)
# Download from https://ollama.ai/
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=mistral

# Repository Configuration
REPO_URL=https://github.com/Yaotzinohell/LEETCODE_Solutions.git
REPO_BRANCH=dev
REPO_LOCAL_PATH=./repo_clone

# Email Configuration (Gmail)
EMAIL_SENDER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=./logs/code_analyzer.log

# Tracking Configuration
TRACKED_COMMITS_FILE=./data/analyzed_commits.json

# Analysis Configuration
CHECK_QN_FILE=false
MAX_FILE_SIZE_BYTES=50000
AI_TIMEOUT_SECONDS=60
